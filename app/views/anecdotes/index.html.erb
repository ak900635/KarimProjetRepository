<h1>Listing anecdotes</h1>

<table>
  <thead>
    <tr>
      <th>Sujet</th>
      <th>Theme</th>
      <th>IDChapitre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @anecdotes.each do |anecdote| %>
      <tr>
        <td><%= anecdote.sujet %></td>
        <td><%= anecdote.theme %></td>
        <td><%= anecdote.chapitre_id %></td>
        <td><%= link_to 'Details', anecdote %></td>
        <td><%= link_to 'Editer', edit_anecdote_path(anecdote) %></td>
        <td><%= link_to 'Detruire', anecdote, method: :delete, data: { confirm: 'Etes vous sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Creer Nouvelle anecdote', new_anecdote_path %>
