<h1>Listing personnes</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Scene</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personnes.each do |personne| %>
      <tr>
        <td><%= personne.nom %></td>
        <td><%= personne.scene_id %></td>
        <td><%= link_to 'Details', personne %></td>
        <td><%= link_to 'Editer', edit_personne_path(personne) %></td>
        <td><%= link_to 'Detruire', personne, method: :delete, data: { confirm: 'Etes vous sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Creer Nouvelle Personne', new_personne_path %>
