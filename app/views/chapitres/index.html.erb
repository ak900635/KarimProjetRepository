<h1>Listing chapitres</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Numero</th>
      <th>IDChapitre<th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapitres.each do |chapitre| %>
      <tr>
        <td><%= chapitre.name %></td>
        <td><%= chapitre.numero %></td>
        <td><%= chapitre.id %></td>
        <td><%= link_to 'Details', chapitre %></td>
        <td><%= link_to 'Editer', edit_chapitre_path(chapitre) %></td>
        <td><%= link_to 'Detruire', chapitre, method: :delete, data: { confirm: 'Etes vous sure ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Creer Nouveau Chapitre', new_chapitre_path %>
